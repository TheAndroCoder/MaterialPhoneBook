<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/toolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="#000"/>
    </RelativeLayout>
    <!--Tablayout starts-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/tablayout"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:text="Phone"
                    android:textColor="#000"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:id="@+id/phone_tab"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:text="Contacts"
                    android:textColor="#000"
                    android:id="@+id/contacts_tab"
                    android:background="@drawable/tablayout_border"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:text="Favourites"
                    android:textColor="#000"
                    android:textSize="22sp"
                    android:id="@+id/fav_tab"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <!--TabLayout ends-->
    <!--Search View starts-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tablayout"
        android:background="@drawable/contact_search_bg"
        android:layout_marginRight="10dp"
        android:id="@+id/sslayout"
        android:layout_marginLeft="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@null"
            android:text=""
            android:textStyle="bold"
            android:textColor="#000"
            android:hint="Start typing to search..."
            android:paddingLeft="20dp"
            android:id="@+id/search"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contactsRecycler"
        android:layout_below="@+id/sslayout"
        android:layout_marginTop="10dp"/>
</RelativeLayout>